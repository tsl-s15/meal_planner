<%= form_for(@recipe, html: { class: 'form-horizontal'}) do |f| %>
  <!-- Label and input for name -->
  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <!-- Label and input for cuisine -->
  <div class="form-group">
    <%= f.label :cuisine, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :cuisine, class: 'form-control' %>
    </div>
  </div>

  <!-- Label and input for servings -->
  <div class="form-group">
    <%= f.label :servings, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :servings, class: 'form-control' %>
    </div>
  </div>

  <!-- Label and input for prep_time -->
  <div class="form-group">
    <%= f.label :prep_time, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :prep_time, class: 'form-control' %>
    </div>
  </div>

  <!-- Label and input for instructions -->
  <div class="form-group">
    <%= f.label :instructions, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :instructions, class: 'form-control' %>
    </div>
  </div>

  <!-- Label and input for meal_category -->
  <div class="form-group">
    <%= f.label :meal_category, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :meal_category, class: 'form-control' %>
    </div>
  </div>

  <!-- Label and input for creator_id -->
  <div class="form-group">
    <%= f.label :creator_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :creator_id, User.all, :id, :username, {}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-default' %>
      or
      <a href="/recipes">Cancel</a>
    </div>
  </div>
<% end %>
