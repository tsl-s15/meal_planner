<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Ingredient #<%= @ingredient.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @ingredient.name %></dd>

              <dt>Category</dt>
              <dd><%= @ingredient.category %></dd>

              <dt>Price per unit</dt>
              <dd><%= @ingredient.price_per_unit %></dd>

              <dt>Unit</dt>
              <dd><%= @ingredient.unit %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to ingredients_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_ingredient_url(@ingredient.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to ingredient_url(@ingredient.id), :method => "delete", :data => { :confirm => "Do you really want to delete this ingredient?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
