<%= form_for(@recipe_ingredient, html: { class: "form-horizontal" }) do |f| %>
  <!-- Label and input for recipe_id -->
  <div class="form-group">
    <%= f.label :recipe_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :recipe_id, Recipe.all, :id, :name, {}, class: 'form-control' %>
    </div>
  </div>

  <!-- Label and input for ingredient_id -->
  <div class="form-group">
  <%= f.label :ingredient_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
       <%= f.collection_select :ingredient_id, Ingredient.all, :id, :name, {}, class: 'form-control' %>
    </div>
  </div>

  <!-- Label and input for amount -->
  <div class="form-group">
    <%= f.label :amount, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :amount, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-default' %>
      or
      <a href="/recipe_ingredients">Cancel</a>
    </div>
  </div>
<% end %>
